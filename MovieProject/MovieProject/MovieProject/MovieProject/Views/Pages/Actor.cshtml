@model MovieProject.Models.ActorDetail
@{
	ViewData["Title"] = "View";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- details -->
<section class="section section--details">
	<!-- details background -->
	<div class="section__details-bg" data-bg="~/img/bg/actor__bg.jpg"></div>
	<!-- end details background -->
	<!-- details content -->
	<div class="container">
		<div class="row">
			<!-- title -->
			<div class="col-12">
				<h1 class="section__title section__title--head">@Model.Actor.ActorName</h1>
			</div>
			<!-- end title -->
			<!-- content -->
			<div class="col-12 col-xl-6">
				<div class="item item--details">
					<!-- card cover -->
						<div class="item__cover">
							<img src="@(Model.Actor.ActorPhotoUrl)" alt="">
						</div>
					<!-- end card cover -->
					<!-- card content -->
					<div class="item__content">
						<ul class="item__meta item__meta--first">
							<li><span>Career:</span> Actress</li>
							<li><span>Date of birth:</span>@Model.Actor.ActorDt </li>
							<li><span>Genres:</span> <a href="#">Action</a> <a href="#">Triler</a> <a href="#">Drama</a></li>
							<li><span>Movie:</span> <a href="~/Category/MovieDetails">@Model.Movies.MovieName</a></li>
							<li><span>Tv Series:</span> <a href="~/Category/TvSeriesDetails">@Model.TvSeries.TvSeriesName</a></li>
							<li><span>Detail:</span>@Model.Actor.ActorDetails</li>

						</ul>
					</div>
				</div>
			</div>
			<!-- end content -->
		</div>
	</div>
	<!-- end details content -->
</section>
<!-- end details -->


