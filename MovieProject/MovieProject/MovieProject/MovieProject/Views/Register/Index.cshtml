@{
	bool? Basarili = null;
	string Mesaj = "";
	if (ViewBag.Basarili != null)
	{
		Basarili = Convert.ToBoolean(ViewBag.Basarili);
	}
	if (ViewBag.Mesaj != null)
	{
		Mesaj = ViewBag.Mesaj;
	}
}


<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- CSS -->
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/splide.min.css">
	<link rel="stylesheet" href="~/css/slimselect.css">
	<link rel="stylesheet" href="~/css/plyr.css">
	<link rel="stylesheet" href="~/css/photoswipe.css">
	<link rel="stylesheet" href="~/css/default-skin.css">
	<link rel="stylesheet" href="~/css/main.css">

	<!-- Favicons -->
	<link rel="icon" type="image/png" href="icon/favicon-32x32.png" sizes="32x32">
	<link rel="apple-touch-icon" href="icon/favicon-32x32.png">

	<meta name="description" content="Online Movies, TV Shows & Cinema HTML Template">
	<meta name="keywords" content="">
	<meta name="author" content="Dmitry Volkov">
	<title>FlixGo – Online Movies, TV Shows & Cinema HTML Template</title>

</head>
<body>
	<div class="sign section--bg" data-bg="img/bg/section__bg.jpg">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="sign__content">

						<!-- registration form -->
						<form action="#" class="sign__form">
							<a href="~/Home/Index" class="sign__logo">
								<img src="~/img/logo.svg" alt="">
							</a>
							@Html.BeginForm("Register", "Register", FormMethod.Post)
							{
							<div class="sign__group">
								<input ng-model="TxtUserName"
									   type="text"
									   name="TxtUserName"
									   id="TxtUserName"
									   class="sign__input"
									   placeholder="UserName"
									   required>
							</div>

							<div class="sign__group">
								<input ng-model="TxtPassword"
									   type="text"
									   name="TxtSurName"
									   id="TxtSurName"
									   class="sign__input"
									   placeholder="SurName"
									   required>
							</div>


							<div class="sign__group">
								<input type="email"
									   name="TxtMail"
									   id="TxtMail"
									   class="sign__input"
									   placeholder="Email"
									   required>
							</div>


							<div class="sign__group">
								<div class="sign__group">
									<input type="tel"
										   name="TxtGsm"
										   id="TxtGsm"
										   class="sign__input"
										   placeholder="GSM"
										   required>
								</div>
							</div>

							<div class="sign__group">
								<input type="password"
									   name="TxtPassword"
									   id="TxtPassword"
									   class="sign__input"
									   placeholder="Password"
									   required>
							</div>

							<div class="sign__group sign__group--checkbox">
								<input id="remember" name="remember" type="checkbox" checked="checked">
								<label for="remember">I agree to the <a href="~/Pages/PrivacyPolicy">Privacy policy</a></label>
							</div>

							<button class="sign__btn" type="submit"><span>Sign up</span></button>

							<span class="sign__text">Already have an account? <a href="~/Login/Index">Sign in!</a></span>
							}
						</form>
						<!-- registration form -->
						@{
							if (Basarili != null)
							{
								if (Basarili.Value)
								{
									<span>Kayıt olundu.</span>
								}
								else
								{
									<span>@Mesaj</span>
								}
							}
						}
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- JS -->
	<script src="~/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/splide.min.js"></script>
	<script src="~/js/smooth-scrollbar.js"></script>
	<script src="~/js/slimselect.min.js"></script>
	<script src="~/js/plyr.min.js"></script>
	<script src="~/js/photoswipe.min.js"></script>
	<script src="~/js/photoswipe-ui-default.min.js"></script>
	<script src="~/js/main.js"></script>
</body>

</html>