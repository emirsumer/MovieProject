@model MovieProject.Models.MovieDetail

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<::after></::after>
<section class="section section--details">
    <!-- details background -->
    <div class="section__details-bg" data-bg="~/img/bg/details__bg.jpg" style="background: url(&quot;~/img/bg/details__bg.jpg&quot;) center center / cover no-repeat;"></div>
    <!-- end details background -->
    <!-- details content -->
    <div class="container">
        <div class="row">
            <!-- title -->
            <div class="col-12">
                <h1 class="section__title section__title--head">@Model.Moviess.MovieName</h1>
            </div>
            <!-- end title -->
            <!-- content -->
            <div class="col-12 col-xl-6">
                <div class="item item--details">
                    <!-- card cover -->
                    <div class="item__cover">
                        <img src="@Model.BannerUrl" />
                    </div>
                    <!-- end card cover -->
                    <!-- card content -->
                    <div class="item__content">
                        <div class="item__wrap">
                            <span class="item__rate">8.4</span>

                            <ul class="item__list">
                                <li>Full HD</li>
                                <li>16+</li>
                            </ul>
                        </div>

                        <ul class="item__meta">
                            <li><span>Genre:</span></a> <a href="#">@Model.Moviess.TblCategory.CategoryName</a></li>
                            <li><span>Running time:</span>@Model.Moviess.Duration</li>
                            <li><span>Country:</span> <a href="#">USA</a></li>
                            <li><span>Premiere:</span>@Model.Moviess.ReleaseDate</li>
                        </ul>

                        <ul class="item__meta item__meta--second">
                            @foreach (var item in Model.Moviess.TblDirector)
                            {
                                <li><span>Director:</span> <a href="~/Pages/Actor">@item.DirectorName @item.DirectorSurname</a></li>
                            }

                            <li>
                                <span>Actors:</span>
                                @{
                                    foreach (var Actor in Model.Moviess.TblActor)
                                    {
                                        <a href="~/Pages/Actor/@Actor.ActorId">@Actor.ActorName @Actor.ActorSurname</a>
                                    }
                                }
                            </li>
                        </ul>
                    </div>

                    <div class="item__description item__description--details" data-scrollbar="true" tabindex="-1" style="overflow: hidden; outline: none;">
                        <div class="scroll-content">
                            <p>@Model.Moviess.MovieDetails</p>
                        </div>
                    </div>
                    <!-- end card content -->
                </div>
            </div>
            <!-- end content -->
            <!-- player -->
            <div class="col-12 col-xl-6">
                @*       <iframe width="420" height="345" src="@Model.VideoUrl" style="float: right;">
                </iframe> *@
                <iframe width="560" height="315" src="@Model.VideoUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
            </div>
        </div>
    </div>



    <!-- end details content -->
</section>

